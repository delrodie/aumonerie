                    <div class="cover">
                        <div class="container">
                            <div class="header-content">
                                <div class=""></div>
                                <h1>Aumonerie Militaire Catholique du Diocèse d'Abidjan</h1>
                                <h4>Pelerinage</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slide">
                    <img src="{{ absolute_url(asset('assets/images/photo/slide3.jpg')) }}" alt="images not found" class="img-fluid">
                    <div class="cover">
                        <div class="container">
                            <div class="header-content">
                                <div class="animated bounceInLeft"></div>
                                <h2></h2>
                                <h1>Aumonerie Militaire Catholique du Diocèse d'Abidjan</h1>
