<form method="post" action="{{ path('cardinal_delete', {'id': cardinal.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce message?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cardinal.id) }}">
    <button class="btn btn-danger mt-5">Supprimer</button>
</form>
